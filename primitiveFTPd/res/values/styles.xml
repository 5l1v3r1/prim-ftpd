<resources>
	<style name="PrimFtpdDarkTheme" parent="android:Theme.Holo">
		<item name="android:actionBarStyle">@style/PrimFtpdActionBar</item>
		<item name="iconStart">@drawable/ic_start_dark</item>
		<item name="iconStop">@drawable/ic_stop_dark</item>
		<item name="iconSettings">@drawable/ic_settings_dark</item>
		<item name="iconRefresh">@drawable/ic_refresh_dark</item>
	</style>

	<style name="PrimFtpdLightTheme" parent="android:Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/PrimFtpdActionBar</item>
		<item name="iconStart">@drawable/ic_start_light</item>
		<item name="iconStop">@drawable/ic_stop_light</item>
		<item name="iconSettings">@drawable/ic_settings_light</item>
		<item name="iconRefresh">@drawable/ic_refresh_light</item>
	</style>

	<style name="PrimFtpdActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:background">@color/primary</item>
	</style>

	<declare-styleable name="customAttrs">
		<attr name="iconStart" format="reference" />
		<attr name="iconStop" format="reference" />
		<attr name="iconSettings" format="reference" />
		<attr name="iconRefresh" format="reference" />
	</declare-styleable>
</resources>
